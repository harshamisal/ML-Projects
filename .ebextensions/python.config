option_settings:
  aws:ec2:instances:
    InstanceTypes: t3.micro        # choose as per CPU/RAM need
  aws:autoscaling:launchconfiguration:
    # Storage settings for the root volume
    RootVolumeType: gp3            # general‑purpose SSD (more efficient than gp2)
    RootVolumeSize: 30             # 30 GB root volume (adjust as needed)
    RootVolumeIOPS: 3000           # required for gp3 volumes
    RootVolumeThroughput: 125      # optional, for gp3 type

  aws:elasticbeanstalk:application:environment:
    WSGIPath: application:application  # your existing WSGI setting
